<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="30dp"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convertidor de grados"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#174DE0"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:id="@+id/conver"/>
    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E9E9E9"
        android:textOn="째F a 째C"
        android:textOff="째C a 째F"
        android:textSize="21dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="50dp"
        android:id="@+id/tipo"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:textSize="30dp"
        android:background="#EEEEEE"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:inputType="numberDecimal"
        android:layout_toRightOf="@id/tipo"
        android:id="@+id/grados"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/termometro"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:textStyle="bold"
        android:background="#328EEE"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:onClick="convertir"/>



</RelativeLayout>